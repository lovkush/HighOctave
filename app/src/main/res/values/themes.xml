<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.OctaveAcademy" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primaryPurple</item>
        <item name="colorPrimaryVariant">@color/primaryPurple</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/primaryBlue</item>
        <item name="colorSecondaryVariant">@color/primaryBlue</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/primaryBlue</item>
        <!-- Customize your theme here. -->
        <item name="android:windowBackground">@drawable/background</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Theme.OctaveAcademy.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>


    <style name="Reverse" parent="Theme.OctaveAcademy">
        <item name="colorPrimary">@color/primaryBlue</item>
        <item name="colorPrimaryVariant">@color/primaryBlue</item>
        <item name="colorSecondary">@color/primaryPurple</item>
        <item name="colorSecondaryVariant">@color/primaryPurple</item>
    </style>


    <style name="MyActionBar" parent="Theme.OctaveAcademy">
        <item name="android:background">@color/primaryBlue</item>
    </style>

    <style name="Theme.OctaveAcademy.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.OctaveAcademy.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>